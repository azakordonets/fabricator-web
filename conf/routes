# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                  controllers.Application.index
GET     /api/v1/integer                    controllers.AlphaNumericBack.integer(min: Int ?= 0, max: Int ?= 0, json:Boolean ?= true, amount: Int ?= 1)
GET     /api/v1/double                     controllers.AlphaNumericBack.double(min: Double ?= 0.0, max: Double ?= 0.0, json:Boolean ?= true, accuracy: Int ?= 1, amount: Int ?= 1)
GET     /api/v1/string                     controllers.AlphaNumericBack.string(length: Int ?= 30, json:Boolean ?= true , amount: Int ?= 1)
GET     /api/v1/hash                       controllers.AlphaNumericBack.hash(length: Int ?= 40, json:Boolean ?= true , amount: Int ?= 1)
GET     /api/v1/guid                       controllers.AlphaNumericBack.guid(length: Int ?= 5, json:Boolean ?= true , amount: Int ?= 1)
GET     /api/v1/letterify                  controllers.AlphaNumericBack.letterify(inputString: String, json:Boolean ?= true )
GET     /api/v1/numerify                   controllers.AlphaNumericBack.numerify(inputString: String, json:Boolean ?= true )
GET     /api/v1/botify                     controllers.AlphaNumericBack.botify(inputString: String, json:Boolean ?= true )

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
